{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",                                                                 
    "moduleResolution": "node",                    
    "baseUrl": ".",                                
    "paths": {
      "commons/*": ["../__commons__/src/*"]
    },                                      
    "rootDirs": ["./src", "../__commons__/src" ],                                    
    "outDir": "./dist",                                      
    "esModuleInterop": true,                            
    "strict": true,                                    
    "skipLibCheck": true                                
  },
  "exclude": ["__tests__"]
}
